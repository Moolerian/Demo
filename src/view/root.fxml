        <ScrollPane prefHeight="371.0" prefWidth="182.0" BorderPane.alignment="CENTER">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="366.0" prefWidth="172.0">
                    <children>
                        <ComboBox fx:id="comboBox" layoutX="12.0" layoutY="5.0" prefHeight="25.0" prefWidth="147.0"/>
